
 	
<script type="text/javascript">
	$('document').ready(function(){
	
	$(".btn").click(function(){
			var me=$(this)	
			var $inputs = $('#new_ball .ball_color');
			var check="true"

			 $inputs.each(function() {
       			  if(! $(this).val()){
			$('input').css("border","1px solid red");
			$('.alert').css("display","block");
				check="false";								
				}
			else{
			var id_name=me.attr("id");
			$("#new_ball").attr("action","/insert?btnname="+id_name);		
				check="true"
			    }
    				});
		if (check=="true"){return true}else{return false;}
			
	});
		
		$('.close').click(function(){$('.alert').fadeOut('slow')})
	});
	
</script>

 
	<p class="alert alert-error" style="display:none">
